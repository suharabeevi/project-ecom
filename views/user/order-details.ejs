<section class="h-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-10 col-xl-8">
        <div class="card" style="border-radius: 10px;"><button id="download" class="btn btn-primary"
            style="height: 50px; width: 150px; background-color: #088178 ;"><i class="material-icons md-18">print</i>
            Invoice</button>


          <div id="container_content">
            <div class="card-header px-4 py-5">
              <h5 class="text-muted mb-0">Thanks for your Order, <span style="color:#088178;">
                  <%=user.user.firstName%>
                </span>!</h5>
            </div>


            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #088178;">Receipt</p>
                <p class="small text-muted mb-0">Receipt Voucher : <%=orders[0].hashedId%>
                </p>
              </div>

              <% products[0].forEach(function(products) { %>
                <div class="card shadow-0 border mb-4">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-2">
                        <img src="<%=products.image.image1%>" class="img-fluid" alt="Phone">
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0">
                          <%=products.productName%>
                        </p>
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">Category:<%=products.category%>
                        </p>
                        </p>
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">Price: $ <%=products.productPrice%>
                        </p>
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">Qty: <%=products.quantity%>
                        </p>
                      </div>
                      <!-- <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                      <p class="text-muted mb-0 small">$499</p>
                    </div> -->
                    </div>
                    <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">

                  </div>
                </div>
                <% }); %>

                  <div class="row d-flex align-items-center">
                    <div class="col-md-2">
                      <p class="text-muted mb-0 small">Track Order</p>
                    </div>
                    <div class="col-md-10">
                      <div class="progress" style="height: 6px; border-radius: 16px;">
                        <div id="progress-bar" role="progressbar"
                          style="width: 65%; border-radius: 16px; background-color: #088178;" aria-valuenow="65"
                          aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                      <div class="d-flex justify-content-around mb-1">
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Out for delivary</p>
                        <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p>
                      </div>
                    </div>
                  </div>

                  <div class="d-flex justify-content-between pt-2">
                    <p class="fw-bold mb-0">Order Details</p>
                    <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> ₹ <%=orders[0].totalPrice%>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between pt-2">
                    <p class="text-muted mb-0">Mobile Number :<%=Address[0].phone%>
                    </p>

                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0"> Date: <%= new Date(orders[0].createdAt).toDateString()%>
                    </p>
                   
                  </div>

                  <div class="d-flex justify-content-between mb-5">
                    <p class="text-muted mb-0">Email :<%=Address[0].email%>
                    </p>
                    <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                  </div>
            </div>

            <div class="card-footer border-0 px-4 py-5"
              style="background-color: #088178; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                paid: <span class="h2 mb-0 ms-2">₹ <%=orders[0].totalPrice%></span></h5>

              <% if (orders[0].orderConfirm==='delivered' ) { %>
                <button class="btn-info btn-lg"
                  onclick="returnOrder('<%=orders[0]._id%>','<%=orders[0].totalPrice%>')">Return</button>
                <% } else if (orders[0].orderConfirm==='Canceled' ) { %>
                  <div id="canceled-message" style="color: red; font-size: 1.2rem;">Order Canceled.</div>
                  <% } else if (orders[0].orderConfirm==='Returned' ) { %>
                    <div id="returned-message" style="color: red; font-size: 1.2rem;">Order Returned.</div>
                    <% } else { %>
                      <button class="btn-danger btn-lg mr-3"
                        onclick="cancelOrder('<%=orders[0]._id%>','<%=orders[0].totalPrice%>')">Cancel</button>
                      <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
</section>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<script>
  window.onload = function () {
    document.getElementById('download').addEventListener("click", () => {
      let invoice = this.document.getElementById('container_content')
      console.log(invoice);
      console.log(window);
      html2pdf().from(invoice).save()
    })
  }

  function cancelOrder(orderId, total) {
    // Show confirmation message using SweetAlert
    Swal.fire({
      title: 'Are you sure?',
      text: 'You will not be able to recover this order!',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, cancel it!',
      timer: 5000
    }).then((result) => {
      // If the user confirms, make the AJAX call
      if (result.isConfirmed) {
        $.ajax({
          url: `/cancel-order/?id=${orderId}&total=${total}`,
          method: 'POST',
          success: (canceled) => {
            var cancelButton = document.querySelector(".btn-danger");
            cancelButton.parentNode.innerHTML = '<div id="returned-message" style="color:red; font-size: 1.2rem;">Order canceled.</div>';

          }
        })
      }
    })
  }


  function returnOrder(orderId, total) {

    Swal.fire({
      title: 'Return Order',
      text: 'Are you sure you want to return this order?',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, return it!',
      cancelButtonText: 'Cancel',
      timer: 5000
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: `/return-order/?id=${orderId}&total=${total} `,
          method: 'POST',
          success: (returnOrderStatus) => {
            var returnButton = document.querySelector(".btn-info");
            returnButton.parentNode.innerHTML = '<div id="canceled-message" style="color:red; font-size: 1.2rem;">Order Returned.</div>';
          }
        })
      }
    })
  } const progressBar = document.getElementById('progress-bar');

  // You can set the progress bar value here based on the order status received from the database
  const orderStatus = '<%=orders[0].orderConfirm%>';
  let progressBarValue = 0;

  if (orderStatus === 'confirmed') {
    progressBarValue = 33;
  } else if (orderStatus === 'shipped') {
    progressBarValue = 66;
  } else if (orderStatus === 'delivered') {
    progressBarValue = 100;
  }

  progressBar.style.width = progressBarValue + '%';
  progressBar.setAttribute('aria-valuenow', progressBarValue);

</script>